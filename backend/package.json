{
  "name": "courier-backend",
  "version": "1.0.0",
  "description": "Courier Management System Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "seed": "node prisma/seed.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "test:auth": "cross-env NODE_ENV=test jest tests/auth.test.js --testTimeout=10000",
    "test:parcel": "cross-env NODE_ENV=test jest tests/parcel.test.js --testTimeout=15000",
    "test:utils": "cross-env NODE_ENV=test jest tests/utils.test.js --testTimeout=10000",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration.test.js --testTimeout=20000",
    "test:watch": "cross-env NODE_ENV=test jest --watch --testTimeout=10000",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --testTimeout=15000",
    "test:all": "cross-env NODE_ENV=test jest --runInBand --testTimeout=20000",
    "test:parcel-full": "cross-env NODE_ENV=test jest tests/parcel.test.js tests/utils.test.js tests/integration.test.js --runInBand --testTimeout=20000",
    "test:admin": "jest tests/admin.test.js --forceExit --detectOpenHandles",
    "test:clean": "cross-env NODE_ENV=test node scripts/cleanTestData.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "puppeteer": "^24.16.2",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.0.5",
    "cross-env": "^10.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4"
  }
}
